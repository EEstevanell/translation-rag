# CodeRev Agent Framework Environment Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Fireworks AI API key
FIREWORKS_API_KEY=your_fireworks_api_key_here

# Optional: Fireworks API base URL (leave as default unless you have a specific endpoint)
FIREWORKS_BASE_URL=https://api.fireworks.ai/inference/v1

# Optional: Model to use (default shown below)
MODEL_NAME=accounts/fireworks/models/llama-v3-70b-instruct

# Optional: Maximum tokens for responses (leave empty for model default)
MAX_TOKENS=4096

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Enable self reflection (true/false)
ENABLE_REFLECTION=false

# Optional: Embedding model (supports Fireworks)
EMBEDDING_MODEL=nomic-ai/nomic-embed-text-v1.5

SIMILARITY_THRESHOLD=0.99
